<%= render 'public/header_public' %>
<div class="container">
  <div class="row d-flex justify-content-between">
    <h2 class="ml-30 mt-5">ショッピングカート</h2>
    <%= link_to "カートを空にする", "/cart_items/destroy_all", method: :delete, class:"btn btn-danger col-2 justify-content-end ml-30 mt-5" %>
  </div>
    <table class="container">
      <thead>
        <tr class="row">
          <th class="col-4">商品名</th>
          <th class="col-2">単価(税込)</th>
          <th class="col-2">数量</th>
          <th class="col-2">小計</th>
          <th class="col-2"></th>
        </tr>
      </thead>
      <tbody>
        <% sum = 0 %>
        <% @cart_items.each do |cart_item| %>
          <tr class="row d-flex align-items-center">
            <td class="col-4">
              <%= attachment_image_tag cart_item.item, :image, format: "jpeg", size: "100x100", fallback: "no_image.jpg" %>
              <%= cart_item.item.name %>
            </td>
            <td class="col-2">
              <%= cart_item.item.price*@TAX %>
            </td>
            <td class="col-2">
              <%= form_with model:cart_item, local:true do |f| %>
                <%= f.number_field :amount, min:1, max:100 %>
                <%= f.submit "変更", class:"btn btn-success" %>
              <% end %>
            </td>
            <td class="col-2">
              <%= cart_item.item.price.to_i*cart_item.amount.to_i*@TAX %>
            </td>
            <td class="col-2">
              <%= link_to "削除する", "/cart_items/#{cart_item.id}", method: :delete, class:"btn btn-danger" %>
            </td>
          </tr>
          <% sum = sum + cart_item.item.price.to_i*cart_item.amount.to_i*@TAX %>
        <% end %>
      </tbody>
    </table>
    <div class="row d-flex justify-content-between my-5">
      <%= link_to "買い物を続ける", "/items", class:"btn btn-info col-2" %>
      <table class="col-4">
        <tr class="row">
          <th class="col-4">
            合計金額
          </th>
          <td class="col-2">
            <%= sum %>
          </td>
        </tr>
      </table>
    </div>
    <div class="row my-5">
      <%= link_to "情報入力に進む", "/orders/new", class:"btn btn-success col-2 mx-auto" %>
    </div>
  </div>
</div>
<%= render 'public/footer_public' %>