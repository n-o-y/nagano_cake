<h1>注文情報確認</h1>
<% sum = 0 %>
<% @cart_items.each do |cart_item| %>
  <%= cart_item.item.name %>
  <%= cart_item.price_with_tax(cart_item.item.price) %>
  <%= cart_item.amount %>
  <%= cart_item.price_with_tax(cart_item.sum_of_price(cart_item.item.price, cart_item.amount)) %>
  <% sum = sum + cart_item.price_with_tax(cart_item.sum_of_price(cart_item.item.price, cart_item.amount)).to_i %>
<% end %>

<%= Order::SHIPPING_COST %>
<%= sum %>
<%= Order::SHIPPING_COST.to_i + sum.to_i %>


<%= @order.payment_method %>
<%= @order.postal_code %><%= @order.address %><%= @order.name %>

<%= form_with model:@order, url:"/orders", local:true do |f| %>
  <%= f.hidden_field :postal_code, value: @order.postal_code %>
  <%= f.hidden_field :address, value: @order.address %>
  <%= f.hidden_field :name, value: @order.name %>
  <%= f.hidden_field :total_payment, value: Order::SHIPPING_COST.to_i + sum.to_i %>
  <%= f.hidden_field :payment_method, value: @order.payment_method %>
  <%= f.submit "注文を完了する"  %>
<% end %>