<%= render 'public/header_public' %>
<div class="container">
  <div class="row">
    <h2 class="ml-30 my-5">配送先登録/一覧</h2>
  </div>
  <div>
    <%= form_with model:@address, local:true do |f| %>
      <div class="row my-1">
        <%= f.label :"郵便番号(ハイフンなし)", class:"col-3" %>
        <%= f.text_field :postal_code %>
      </div>
      <div class="row my-1">
        <%= f.label :住所, class:"col-3" %>
        <%= f.text_field :address, class:"mr-5 col-5" %>
      </div>
      <div class="row my-1">
        <%= f.label :宛名, class:"col-3" %>
        <%= f.text_field :name %>
        <%= f.submit "   新規登録   ", class:"btn btn-success offset-5" %>
      </div>
    <% end %>
  </div>
  <div class="my-5">
    <table>
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td style="width:20%"><%= address.postal_code %></td>
            <td style="width:30%"><%= address.address %></td>
            <td style="width:20%"><%= address.name %></td>
            <td style="width:30%">
              <%= link_to "   編集する   ", "/addresses/#{address.id}/edit", class:"btn btn-success" %>
              <%= link_to "   削除する   ", "/addresses/#{address.id}", method: :delete, class:"btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= render 'public/footer_public' %>