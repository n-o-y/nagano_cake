<%= render 'public/header_public' %>
<div class="container">
  <div class="row">
    <h2 class="ml-30 mt-5">商品一覧(全<%= @items.count %>件)</h2>
  </div>
  <div class="container">
    <div class="row mb-5">
      <% @items.each do |item| %>
        <div class="col-3 d-flex flex-column">
          <%= link_to "/items/#{item.id}" do %>
            <%= attachment_image_tag item, :image, format: "jpeg", size: "200x150", fallback: "no_image.jpg" %></br>
            <%= item.name %></br>
            ￥<%= item.price %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render 'public/footer_public' %>