<%= render 'admin/header_admin' %>
<div class="container">
  <div class="row">
    <h2 class="ml-30 my-5">注文履歴詳細</h2>
  </div>
  <div class="row">
    <div class="col col-8">
      <div class="field row my-2">
        <label class="col-4">
          購入者
        </label>
        <div class="col-8">
          <%= @order.customer.last_name %><%= @order.customer.first_name %>
        </div>
      </div>
      <div class="field row my-2">
        <label class="col-4">
          注文日
        </label>
        <div class="col-8">
          <%= @order.created_at %>
        </div>
      </div>
      <div class="field row my-2">
        <label class="col-4">
          配送先
        </label>
        <div class="col-8">
          <%= @order.postal_code %><%= @order.address %><%= @order.name %>
        </div>
      </div>
      <div class="field row my-2">
        <label class="col-4">
          支払方法
        </label>
        <div class="col-8">
          <%= @order.payment_method %>
        </div>
      </div>
      <div class="field row my-2">
        <label class="col-4">
          注文ステータス
        </label>
        <div class="col-8">
          <%= form_with model: [:admin, @order], local:true do |f| %>
            <%= f.select :status, [ ["製作中", :making ], ["発送中", :shipping ] ] %>
            <%= f.submit "更新", class:"btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <table class="col col-9">
      <thead>
        <tr class="border-top border-bottom">
          <th style="width:30%">商品名</th>
          <th style="width:10%">単価（税込）</th>
          <th style="width:10%">数量</th>
          <th style="width:20%">小計</th>
          <th style="width:30%">製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_detail.each do |order_detail| %>
          <tr class="border-bottom">
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price*@TAX %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.price*order_detail.amount*@TAX %></td>
            <td><%= form_with model: [:admin, order_detail], local:true do |f| %>
                  <%= f.select :status, [ ["製作中", :a ], ["発送中", :b ] ] %>
                  <%= f.submit "更新", class:"btn btn-success" %>
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col col-3">
      <div class="row my-2">
        <label class="col-6">
          商品合計
        </label>
        <div class="col-6">
          １000円
        </div>
      </div>
      <div class="row my-2">
        <label class="col-6">
          送料
        </label>
        <div class="col-6">
          800円
        </div>
      </div>
      <div class="row my-2">
        <label class="col-6">
          請求金額合計
        </label>
        <div class="col-6">
          1000円
        </div>
      </div>
    </div>
  </div>
</div>