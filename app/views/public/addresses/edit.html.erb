<%= render 'public/header_public' %>
<div class="container">
  <div class="row">
    <h2 class="ml-30 my-5">配送先編集</h2>
  </div>
  <div class="mb-5">
    <%= form_with model:@address, local:true do |f| %>
      <div class="row my-1">
        <%= f.label :"郵便番号(ハイフンなし)", class:"col-3" %>
        <%= f.text_field :postal_code %>
      </div>
      <div class="row my-1">
        <%= f.label :住所, class:"col-3" %>
        <%= f.text_field :address, class:"mr-5 col-5" %>
      </div>
      <div class="row my-1">
        <%= f.label :宛名, class:"col-3" %>
        <%= f.text_field :name %>
        <%= f.submit "変更内容を保存", class:"btn btn-success offset-5" %>
      </div>
    <% end %>
  </div>
</div>
<%= render 'public/footer_public' %>