<%= render 'admin/header_admin' %>
<div class="container">
  <div class="row">
    <h2 class="ml-30 my-5">ジャンル編集</h2>
  </div>
  <div class="row">
    <%= form_with model: @genre, url: "/admin/genres/#{@genre.id}", local:true do |f| %>
      <%= f.label :ジャンル名, class:"mr-5" %>
      <%= f.text_field :name, autofocus: true, class:"mr-5" %>
      <%= f.submit "   変更を保存   ", class:"btn btn-success" %>
    <% end %>
</div>
<%= render 'admin/footer_admin' %>