<div class="container">
  <div class="row">
    <h2 class="ml-30 my-5">配送先登録/一覧</h2>
  </div>
  <div class="row">
    <%= form_with model:@address, local:true do |f| %>
      <%= f.label :郵便番号, class:"mr-5" %>
      <%= f.text_field :postal_code, class:"mr-5" %>
      <%= f.label :住所, class:"mr-5" %>
      <%= f.text_field :address, class:"mr-5" %>
      <%= f.label :宛名, class:"mr-5" %>
      <%= f.text_field :name, class:"mr-5" %>
      <%= f.submit "   新規登録   ", class:"btn btn-success" %>
    <% end %>
  </div>
  <div class="row mt-5 w-100">
    <table class="col col-4">
      <thead>
        <tr class="border-top border-bottom">
          <th class="pl-5">
            ジャンル
          </th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr class="border-bottom">
            <td style="width:10%">
              <%= address.postal_code %>
            </td>
            <td style="width:40%">
              <%= address.address %>
            </td>
            <td style="width:20%">
              <%= address.name %>
            </td>
            <td style="width:30%">
              <%= link_to "   編集する   ", "/addresses/#{address.id}/edit", class:"btn btn-success" %>
              <%= link_to "   削除する   ", "/", class:"btn btn-success" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>