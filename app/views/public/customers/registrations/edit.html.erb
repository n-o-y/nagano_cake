<%= render 'public/header_public' %>
<div class="container">
  <div class="row">
    <h2 class="ml-30 my-5">会員情報編集</h2>
  </div>
  <div class="container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/customers/shared/error_messages", resource: resource %>
      <div class="field form-group row">
        <%= f.label :名前, class:"col-form-label col-3" %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"col-3 mr-3" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"col-3" %>
      </div>
      <div class="field form-group row">
        <%= f.label :フリガナ, class:"col-form-label col-3" %><br />
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class:"col-3 mr-3" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class:"col-3" %>
      </div>
      <div class="field form-group row">
        <%= f.label :"郵便番号(ハイフンなし)", class:"col-form-label col-3" %><br />
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "", class:"col-3" %>
      </div>
      <div class="field form-group row">
        <%= f.label :住所, class:"col-form-label col-3" %><br />
        <%= f.text_area :address, autofocus: true, autocomplete: "", class:"col-6" %>
      </div>
      <div class="field form-group row">
        <%= f.label :"電話番号(ハイフンなし)", class:"col-form-label col-3" %><br />
        <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "", class:"col-3" %>
      </div>
      <div class="field form-group row">
        <%= f.label :メールアドレス, class:"col-form-label col-3" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "", class:"col-3" %>
      </div>
      <div class="actions  form-group row">
        <%= f.submit "編集内容を保存", class:"col-3 offset-3 btn btn-success" %>
        <%= link_to "退会する", "/customers/unsubscribe", class:"btn btn-danger col-2 offset-2" %>
      </div>
    <% end %>
  </div>
</div>
<%= render 'public/footer_public' %>