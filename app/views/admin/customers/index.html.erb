<div class="container">
  <div class="row">
    <h2 class="ml-30 my-5">会員一覧</h2>
  </div>
  <div class="row w-100">
    <table class="col col-10 mx-auto">
      <thead>
        <tr class="border-top border-bottom">
          <th style="width:20%">会員ID</th>
          <th style="width:20%">氏名</th>
          <th style="width:40%">メールアドレス</th>
          <th style="width:20%">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr class="border-bottom">
            <td><%= customer.id %></td>
            <td>
              <%= link_to "/admin/customers/#{customer.id}" do %>
                <%= customer.last_name %><%=customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_active == TRUE %>有効
                <% else %>退会
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>