<div class="container">
  <div class="row">
    <h2 class="ml-30 my-5">商品詳細</h2>
  </div>
  <div class="row">
    <div class="col col-4">
      <%= attachment_image_tag @item, :image, format: "jpeg", size: "300x300", fallback: "no_image.jpg" %>
    </div>
    <div class="col col-8">
      <div class="field row my-2">
        <label class="col-4">
          商品名
        </label>
        <div class="col-8">
          <%= @item.name %>
        </div>
      </div>
      <div class="field row my-2">
        <label class="col-4">
          商品説明
        </label>
        <div class="col-8">
          <%= @item.introduction %>
        </div>
      </div>
      <div class="field row my-2">
        <label class="col-4">
          ジャンル
        </label>
        <div class="col-8">
          <%= @item.genre.name %>
        </div>
      </div>
      <div class="field row my-2">
        <label class="col-4">
          税込価格</br>
          (税抜価格)
        </label>
        <div class="col-8">
          <%= @item.price*@tax %>(<%= @item.price %>)円
        </div>
      </div>
      <div class="field row my-2">
        <label class="col-4">
          販売ステータス
        </label>
        <div class="col-8">
          <% if @item.is_active == TRUE %>販売中
          <% else %>販売停止中
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row my-4">
        <%= link_to "   編集する   ", "/admin/items/#{@item.id}/edit", class:"btn btn-success btn-lg mx-auto" %>
  </div>
</div>