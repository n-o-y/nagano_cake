<%= render 'public/header_public' %>
<div class="container">
  <div class="row">
    <h2 class="ml-30 my-5">注文履歴一覧</h2>
  </div>
  <div class="mb-5">
    <table>
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td style="width:10%"><%= order.created_at %></td>
            <td style="width:40%"><%= order.postal_code %><%= order.address %><%= order.name %></td>
            <td style="width:20%"><%= order.id %></td>
            <td style="width:10%"><%= order.total_payment %></td>
            <td style="width:10%"><%= order.status %></td>
            <td style="width:10%"><%= link_to "表示する", "/orders/#{order.id}", class:"btn btn-info" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= render 'public/footer_public' %>