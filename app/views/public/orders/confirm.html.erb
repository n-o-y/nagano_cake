<%= render 'public/header_public' %>
<div class="container">
  <div class="row">
    <h2 class="ml-30 mt-5">注文情報確認</h2>
  </div>
  <div class="row">
    <div class="col-8">
      <table>
        <thead>
          <tr class="row">
            <th class="col-5">商品名</th>
            <th class="col-2">単価(税込)</th>
            <th class="col-2">数量</th>
            <th class="col-2">小計</th>
          </tr>
        </thead>
        <tbody>
          <% sum = 0 %>
          <% @cart_items.each do |cart_item| %>
            <tr class="row">
              <td class="col-5"><%= cart_item.item.name %></td>
              <td class="col-2"><%= cart_item.price_with_tax(cart_item.item.price).to_i %></td>
              <td class="col-2"><%= cart_item.amount %></td>
              <td class="col-2"><%= cart_item.price_with_tax(cart_item.sum_of_price(cart_item.item.price, cart_item.amount)).to_i %></td>
            </tr>
            <% sum = sum + cart_item.price_with_tax(cart_item.sum_of_price(cart_item.item.price, cart_item.amount)).to_i %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <table>
        <tr class="row">
          <th class="col-6">送料</th>
          <td class="col-6"><%= Order::SHIPPING_COST %></td>
        </tr>
        <tr class="row">
          <th class="col-6">商品合計</th>
          <td class="col-6"><%= sum %></td>
        </tr>
        <tr class="row">
          <th class="col-6">請求金額</th>
          <td class="col-6"><%= Order::SHIPPING_COST.to_i + sum.to_i %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row my-4">
    <h4 class="col-2">支払方法</h4>
    <div class="col-3">
      <%= @order.payment_method %>
    </div>
  </div>
  <div class="row my-4">
    <h4 class="col-2">お届け先</h4>
    <div class="col-3">
      〒<%= @order.postal_code %><%= @order.address %></br>
      <%= @order.name %>
    </div>
  </div>
  <div class="row my-4">
    <%= form_with model:@order, url:"/orders", local:true do |f| %>
      <%= f.hidden_field :postal_code, value: @order.postal_code %>
      <%= f.hidden_field :address, value: @order.address %>
      <%= f.hidden_field :name, value: @order.name %>
      <%= f.hidden_field :total_payment, value: Order::SHIPPING_COST.to_i + sum.to_i %>
      <%= f.hidden_field :payment_method, value: @order.payment_method %>
      <%= f.submit "注文を確定する", class:"btn btn-success mx-auto" %>
    <% end %>
  </div>
</div>
<%= render 'public/footer_public' %>